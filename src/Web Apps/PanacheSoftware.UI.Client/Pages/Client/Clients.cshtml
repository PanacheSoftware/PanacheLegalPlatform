@page
@model ClientsModel
@{
    ViewData["Title"] = "Clients";
    Layout = "_PSMainLayout";
}

@section Styles {
    @await Html.PartialAsync("_PLDataTableCSS")
}

<div id="overlay" class="overlay"></div>
<div class="container-fluid p-5">
    <div class="row">
        <div class="form-group col-md-12">
            <div class="breadcrumb-container">
                <a id="toggle-sidebar" class="btn btn-outline-secondary btn-sm breadcrumb-button" href="#"><i class="fa fa-bars"></i></a>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">@Html.GetTitle(Model.langQueryList, 10121)</a></li>
                    <li class="breadcrumb-item active">@Html.GetTitle(Model.langQueryList, 10105)</li>
                </ol>
            </div>
        </div>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-header">@Html.GetTitle(Model.langQueryList, 10105)</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="" class="table table-striped table-bordered datatable display nowrap" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10301)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10302)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10200)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10201)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10202)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10203)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var currentClient in Model.clientList.ClientHeaders)
                                        {
                                        <tr>
                                            <td>
                                                <a asp-page="/Client/Index" asp-route-id="@currentClient.Id" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                                            </td>
                                            <td>@currentClient.ShortName</td>
                                            <td>@currentClient.LongName</td>
                                            <td>@currentClient.Description</td>
                                            <td>@currentClient.Status</td>
                                            <td>@currentClient.DateFrom.ToShortDateString()</td>
                                            <td>@currentClient.DateTo.ToShortDateString()</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <a class="btn btn-primary" asp-page="/Client/Index">@Html.GetTitle(Model.langQueryList, 10204)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_PLDataTableJS")
}

