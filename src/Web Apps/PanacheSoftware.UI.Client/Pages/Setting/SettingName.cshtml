@page "{id?}"
@model SettingNameModel
@{
    ViewData["Title"] = "LanguageCode";
    Layout = "_PSMainLayout";
}

@section Styles {
    @await Html.PartialAsync("_PLFormCSS")
}

<div id="overlay" class="overlay"></div>
<div class="container-fluid p-5">
    <div class="row">
        <div class="form-group col-md-12">
            <div class="breadcrumb-container">
                <a id="toggle-sidebar" class="btn btn-outline-secondary btn-sm breadcrumb-button" href="#"><i class="fa fa-bars"></i></a>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">@Html.GetTitle(Model.langQueryList, 10121)</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Setting/SystemSetting">@Html.GetTitle(Model.langQueryList, 10123)</a></li>
                    <li class="breadcrumb-item active">@Model.tenSetting.Name</li>
                </ol>
            </div>
        </div>
    </div>

    <partial name="_SaveMessage" model="Model.SaveMessageModel" />

    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-header">Edit Setting</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="textCode">@Html.GetTitle(Model.langQueryList, 10602)</label>
                                    <input asp-for="tenSetting.Name" class="form-control" readonly />
                                    <span asp-validation-for="tenSetting.Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="status">@Html.GetTitle(Model.langQueryList, 10219)</label>
                                    <input asp-for="tenSetting.Value" class="form-control" />
                                    <span asp-validation-for="tenSetting.Value" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="description">@Html.GetTitle(Model.langQueryList, 10200)</label>
                                    <textarea asp-for="tenSetting.Description" class="form-control" rows="5" readonly></textarea>
                                    <input asp-for="tenSetting.Id" class="form-control" hidden />
                                    <input asp-for="tenSetting.SettingHeaderId" class="form-control" hidden />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">@Html.GetTitle(Model.langQueryList, 10604)</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_PLFormJS")
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

