@page "/DashboardCounter"
@attribute [Authorize]
@inject TokenProvider TokenProvider
@inject IAPIHelper APIHelper

<h1>Dashboard Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    [Parameter]
    public InitialApplicationState InitialState { get; set; }

    protected override Task OnInitializedAsync()
    {
        TokenProvider.AccessToken = InitialState.AccessToken;

        return base.OnInitializedAsync();
    }

    async Task IncrementCount()
    {
        var response = await APIHelper.MakeAPICallAsync(TokenProvider.AccessToken, HttpMethod.Get, APITypes.TASK, $"TaskGroup/GetTaskGroupSummary");

        var taskGroupSummaryList = new TaskGroupSummaryList();

        if (response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            taskGroupSummaryList = response.ContentAsType<TaskGroupSummaryList>();
        }

        //var accessToken = await HttpContext.GetTokenAsync("access_token");

        //await CallServiceHelper.MakeAServiceCallAsync();

        currentCount++;
    }
}
