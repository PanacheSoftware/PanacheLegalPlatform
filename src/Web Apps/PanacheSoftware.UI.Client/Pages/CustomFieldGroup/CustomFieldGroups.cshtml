@page
@model CustomFieldGroupsModel
@{
    ViewData["Title"] = "CustomFieldGroups";
    Layout = "_PSMainLayout";
}

@section Styles {
    @await Html.PartialAsync("_PLDataTableCSS")
}

<div id="overlay" class="overlay"></div>
<div class="container-fluid p-5">
    <div class="row">
        <div class="form-group col-md-12">
            <div class="breadcrumb-container">
                <a id="toggle-sidebar" class="btn btn-outline-secondary btn-sm breadcrumb-button" href="#"><i class="fa fa-bars"></i></a>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">@Html.GetTitle(Model.langQueryList, 10121)</a></li>
                    <li class="breadcrumb-item active">@Html.GetTitle(Model.langQueryList, 10124)</li>
                </ol>
            </div>
        </div>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-header">@Html.GetTitle(Model.langQueryList, 10124)</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="" class="table table-striped table-bordered datatable display nowrap" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>@Html.GetTitle(Model.langQueryList, 11000)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 11001)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10200)</th>
                                            <th>@Html.GetTitle(Model.langQueryList, 10201)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var customFieldGroupHeader in Model.customFieldGroupList.CustomFieldGroupHeaders)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-page="/CustomFieldGroup/Index" asp-route-id="@customFieldGroupHeader.Id" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                                                </td>
                                                <td>@customFieldGroupHeader.ShortName</td>
                                                <td>@customFieldGroupHeader.LongName</td>
                                                <td>@customFieldGroupHeader.Description</td>
                                                <td>@customFieldGroupHeader.Status</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a class="btn btn-primary" asp-page="/CustomFieldGroup/Index">@Html.GetTitle(Model.langQueryList, 10204)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_PLDataTableJS")
}


