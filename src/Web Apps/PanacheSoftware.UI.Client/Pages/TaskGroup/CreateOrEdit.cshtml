@page "{id?}/{parentId?}"
@model CreateOrEditModel
@{
    ViewData["Title"] = $"Panche Legal - Task Group ({Model.taskGroupModel.taskGroupHead.ShortName})";
    Layout = "_PSMainLayout";
}

@section Styles {
    @await Html.PartialAsync("_PLFormCSS")
    @await Html.PartialAsync("_PLDataTableCSS")
}

<div id="overlay" class="overlay"></div>
<div class="container-fluid p-5">
    <div class="row">
        <div class="form-group col-md-12">
            <div class="breadcrumb-container">
                <a id="toggle-sidebar" class="btn btn-outline-secondary btn-sm breadcrumb-button" href="#"><i class="fa fa-bars"></i></a>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">@Html.GetTitle(Model.langQueryList, 10121)</a></li>
                    <li class="breadcrumb-item"><a asp-page="/TaskGroup/TaskGroups">@Html.GetTitle(Model.langQueryList, 10111)</a></li>
                    <li class="breadcrumb-item active">
                        @if (Model.taskGroupModel.taskGroupHead.Id == Guid.Empty)
                        {
                            if (Model.taskGroupModel.taskGroupHead.ParentTaskGroupId != null)
                            {
                                @Html.GetTitle(Model.langQueryList, 10915)
                            }
                            else
                            {
                                @Html.GetTitle(Model.langQueryList, 10908)
                            }
                        }
                        else
                        {
                            @Model.taskGroupModel.taskGroupHead.LongName
                        }
                    </li>
                </ol>
            </div>
        </div>
    </div>

    <partial name="_SaveMessage" model="Model.SaveMessageModel" />

    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-header">
                        @if (Model.taskGroupModel.taskGroupHead.ParentTaskGroupId != null)
                        {
                            @Html.GetTitle(Model.langQueryList, 10915)
                        }
                        else
                        {
                            @Html.GetTitle(Model.langQueryList, 10908)
                        }
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10223)</label>
                                    <input asp-for="taskGroupModel.taskGroupHead.ShortName" class="form-control" />
                                    <span asp-validation-for="taskGroupModel.taskGroupHead.ShortName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10218)</label>
                                    <input asp-for="taskGroupModel.taskGroupHead.LongName" class="form-control" />
                                    <span asp-validation-for="taskGroupModel.taskGroupHead.LongName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10200)</label>
                                    <textarea asp-for="taskGroupModel.taskGroupHead.Description" class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-header">@Html.GetTitle(Model.langQueryList, 10224)</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10222)</label>
                                    <input asp-for="taskGroupModel.taskGroupHead.StartDate" type="text" class="form-control datepicker" />
                                    <input asp-for="taskGroupModel.taskGroupHead.OriginalStartDate" type="text" class="form-control datepicker" hidden />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10911)</label>
                                    <input asp-for="taskGroupModel.taskGroupHead.CompletionDate" type="text" class="form-control datepicker" />
                                    <input asp-for="taskGroupModel.taskGroupHead.Completed" type="checkbox" hidden />
                                    <input asp-for="taskGroupModel.taskGroupHead.CompletedOnDate" type="text" class="form-control datepicker" hidden />
                                    <input asp-for="taskGroupModel.taskGroupHead.OriginalCompletionDate" type="text" class="form-control datepicker" hidden />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-header">@Html.GetTitle(Model.langQueryList, 10225)</div>
                    <div class="card-body">
                        @if (string.IsNullOrWhiteSpace(Model.ParentId))
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10902)</label>
                                        <select asp-for="taskGroupModel.taskGroupHead.TeamHeaderId" asp-items="@Model.TeamSelectList" class="custom-select"></select>
                                        <input class="form-control" hidden type="text" id="unBound" name="unBound" value="Unbound" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10904)</label>
                                        <select asp-for="taskGroupModel.taskGroupHead.ClientHeaderId" asp-items="@Model.ClientSelectList" class="custom-select"></select>
                                        <input class="form-control" hidden type="text" id="unBound" name="unBound" value="Unbound" />
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <input asp-for="taskGroupModel.taskGroupHead.TeamHeaderId" type="text" class="form-control" hidden />
                            <input asp-for="taskGroupModel.taskGroupHead.ClientHeaderId" type="text" class="form-control" hidden />
                        }
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10905)</label>
                                    <select asp-for="taskGroupModel.taskGroupHead.MainUserId" asp-items="@Model.UserSelectList" class="custom-select"></select>
                                    <input class="form-control" hidden type="text" id="unBound" name="unBound" value="Unbound" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">@Html.GetTitle(Model.langQueryList, 10201)</label>
                                    <select asp-for="taskGroupModel.taskGroupHead.Status" asp-items="@Model.StatusList" class="custom-select"></select>
                                    <input asp-for="taskGroupModel.taskGroupHead.Id" class="form-control" hidden />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <partial name="_CustomFieldGroupLinkTaskGroup" model="Model.customFieldGroupLinkTaskGroupTableModel" />
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card border-light mb-6">
                    <div class="card-body">
                        <input asp-for="taskGroupModel.taskGroupHead.ParentTaskGroupId" type="text" class="form-control" hidden />
                        @if (Model.taskGroupModel.taskGroupHead.Id == Guid.Empty)
                        {
                            <button type="submit" class="btn btn-primary">
                                @if (Model.taskGroupModel.taskGroupHead.Id == Guid.Empty)
                                {
                                    if (Model.taskGroupModel.taskGroupHead.ParentTaskGroupId != null)
                                    {
                                        @Html.GetTitle(Model.langQueryList, 10917)
                                    }
                                    else
                                    {
                                        @Html.GetTitle(Model.langQueryList, 10906)
                                    }
                                }
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary">
                                @if (Model.taskGroupModel.taskGroupHead.ParentTaskGroupId != null)
                                {
                                    @Html.GetTitle(Model.langQueryList, 10918)
                                }
                                else
                                {
                                    @Html.GetTitle(Model.langQueryList, 10907)
                                }
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_PLFormJS")
    @await Html.PartialAsync("_PLDataTableJS")
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
            $(document).ready(function () {

                var customFieldLinkButton = document.getElementById('add_customFieldGroupLink');

                customFieldLinkButton.addEventListener('click', addCustomFieldLink, false);

                function addCustomFieldLink() {
                    var customfieldLinkTable = $('#customFieldGroupLink_table').DataTable()
                    var rowCount = $('#CustomFieldGroupLinkTableCount').val();
                    var taskGroupHeadId = $('#taskGroupModel_taskGroupHead_Id').val();

                    customfieldLinkTable.row.add([
                        @{
                            for (int i = 0; i < Model.customFieldGroupLinkTaskGroupTableModel.customFieldGroupRows.Count(); i++)
                            {
                                @Html.Raw(Model.customFieldGroupLinkTaskGroupTableModel.customFieldGroupRows[i]);
                            }
                        }
                    ]).draw();

                    $('.datepicker').datepicker();

                    rowCount++;
                    $('#CustomFieldGroupLinkTableCount').val(rowCount);
                }
            });
    </script>
}





